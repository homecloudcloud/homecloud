[{
	"type": "rpc",
	"id": "rpc.common.objectuuid",
	"description": "Identify an configuration object by its UUID",
	"params": {
		"type": "object",
		"properties": {
			"uuid": {
				"type": "string",
				"format": "uuidv4",
				"required": true
			}
		}
	}
},{
	"type": "rpc",
	"id": "rpc.common.devicefile",
	"description": "Identify an configuration object by a devicefile",
	"params": {
		"type": "object",
		"properties": {
			"devicefile": {
				"type": "string",
				"format": "devicefile",
				"required": true
			}
		}
	}
},{
	"type": "rpc",
	"id": "rpc.common.getlist",
	"params": {
		"type": "object",
		"properties": {
			"start": {
				"type": "integer",
				"required": true
			},
			"limit": {
				"type": [ "integer", "null" ],
				"required": true
			},
			"sortfield": {
				"type": [ "string", "null" ]
			},
			"sortdir": {
				"type": [ "string", "null" ],
				"enum": [ "asc", "ASC", "desc", "DESC" ]
			},
			"search": {
				"type": [ "string", "integer", "null" ]
			}
		}
	}
},
